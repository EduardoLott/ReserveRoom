<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3C3C3">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border_background"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toTopOf="@+id/formId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textRoomTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HorÃ¡rio da Sala 01"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textTime1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08:00 - 09:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textTime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:00 - 10:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textTime3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:text="10:00 - 11:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textTime4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11:00 - 12:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textTime5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:00 - 13:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textTime6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13:00 - 14:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textTime7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14:00 - 15:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textTime8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15:00 - 16:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textTime9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16:00 - 17:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textTime10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17:00 - 18:00"
                android:textAlignment="center"
                android:textColor="#009E1A"
                android:textSize="20sp" />


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/formId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/textReserveRoom"
                android:layout_width="309dp"
                android:layout_height="41dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Reserva Sala 1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="35dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:fontFamily="@font/poppins_bold"
                android:hint="Insira seu nome:"
                android:inputType="text"
                android:minHeight="48dp"
                android:textAlignment="gravity"
                android:textSize="21sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Email: "
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:fontFamily="@font/poppins_bold"
                android:hint="Insira seu email:"
                android:inputType="text"
                android:minHeight="48dp"
                android:textAlignment="gravity"
                android:textSize="21sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textCPF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="CPF: "
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cpfEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:fontFamily="@font/poppins_bold"
                android:hint="Insira seu CPF:"
                android:inputType="number"
                android:minHeight="48dp"
                android:textAlignment="gravity"
                android:textSize="21sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonReserve"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_register"
                android:gravity="center"
                android:text="RESERVAR"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>